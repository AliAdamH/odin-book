<section class="section">
  <div class="container">
      <div class="columns is-centered">
        <div class="column is-8">
          <%= render @post %>
        </div>
      </div>
      <div class="columns is-centered">
        <div class="column is-8">
          <div class="box">
            <%= render partial:'comments/comment', collection: @post.comments %>
            <%= render partial:'comments/form', locals: { post: @post } %>
          </div>
        </div>
      </div>
  </div>
</section>