<%= form_with model: @profile do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="field">
        <div class="control">
            <%= f.label :first_name, 'First Name: ' %>
            <%= f.text_field :first_name, class:'input'%>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <%= f.label :last_name, 'Last Name: ' %>
            <%= f.text_field :last_name, class:'input'%>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <%= f.label :picture, 'Upload your profile picture' %>
            <%= f.file_field :picture, class:'input'%>
        </div>
    </div>
    <div class="level">
        <%= f.submit 'Add Profile', class: 'button is-primary level-item' %>
    </div>
<% end %>