<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="box">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class: "input" }, label_html: { class: 'label'}, wrapper: false %>
    </div>
  </div>
    <div class="field">
    <div class="control">
        <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "input" }, label_html: { class: 'label'}, wrapper: false %>
    </div>
  </div>
    <div class="field">
    <div class="control">
        <%= f.input :password_confirmation,
                required: true,
                input_html: { class: "input" }, label_html: { class: 'label'}, wrapper: false %>
    </div>
  </div>

  <div class="level">
    <div class="level-item is-justify-content-flex-end">
      <%= f.button :submit, "Sign up", class: 'button is-link is-outlined' %>
    </div>
</div>

  <div class="field">
    <div class="control">
      
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>