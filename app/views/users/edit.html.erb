<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-6">
                <div class="box">
                <%= form_with model: @user do |f| %>
                    <div class="field">
                        <div class="control">
                            <%= f.label :username, 'Update your username'%>
                            <%= f.text_field :username, class:'input'%>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <%= f.label :picture, 'Update your profile picture: ' %>
                            <%= image_tag(@user.picture_url) if @user.picture? %>
                            <%= f.file_field :picture %>
                        </div>
                    </div>

                    <div class="level">
                        <div class="level-item is-justify-content-flex-end">
                            <%= f.submit 'Update profile', class:'button is-primary'%>
                        </div>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</section>